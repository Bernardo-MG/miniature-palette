<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

   <changeSet author="Bernardo" id="palette_tables">
      <createTable tableName="palette_groups">
         <column name="id" type="BIGINT" autoIncrement="true">
            <constraints primaryKey="true" />
         </column>
         <column name="name" type="VARCHAR(50)">
            <constraints nullable="false" />
         </column>
      </createTable>
      <createTable tableName="palettes">
         <column name="id" type="BIGINT" autoIncrement="true">
            <constraints primaryKey="true" />
         </column>
         <column name="name" type="VARCHAR(50)">
            <constraints nullable="false" />
         </column>
      </createTable>
      <createTable tableName="paints">
         <column name="id" type="BIGINT" autoIncrement="true">
            <constraints primaryKey="true" />
         </column>
         <column name="palette_id" type="BIGINT">
            <constraints nullable="false"
               foreignKeyName="fk_paint_palette_relationship"
               references="palettes(id)" />
         </column>
         <column name="name" type="VARCHAR(50)">
            <constraints nullable="false" />
         </column>
      </createTable>
   </changeSet>

   <changeSet author="Bernardo" id="palette_relationships">
      <createTable tableName="palette_group_palettes">
         <column name="palette_group" type="BIGINT">
            <constraints nullable="false"
               foreignKeyName="fk_palette_group_relationship"
               references="palette_groups(id)" />
         </column>
         <column name="palette" type="BIGINT">
            <constraints nullable="false"
               foreignKeyName="fk_group_palette_relationship"
               references="palettes(id)" />
         </column>
      </createTable>
   </changeSet>

</databaseChangeLog>

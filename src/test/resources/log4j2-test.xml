<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE xml>
<Configuration status="WARN">

   <Properties>
      <Property name="filename">testing.log</Property>
   </Properties>

   <Appenders>
      <Console name="console" target="SYSTEM_OUT">
         <PatternLayout pattern="%-5p | %d{ISO8601} | %c{1.} %M %L | %m%n" />
      </Console>

      <File name="file" fileName="${filename}">
         <PatternLayout pattern="%-5p | %d{ISO8601} | %c{1.} %M %L | %m%n" />
      </File>
   </Appenders>

   <Loggers>
      <Logger name="com.bernardomg.tabletop" level="off" additivity="false">
         <AppenderRef ref="file" />
      </Logger>

      <logger name="org.eclipse.jetty" level="off" additivity="false">
         <AppenderRef ref="file" />
      </logger>

      <!-- Queries logs -->

      <logger name="org.hibernate.SQL" level="off" additivity="false">
         <AppenderRef ref="file" />
      </logger>

      <!-- Root -->

      <Root level="error">
         <AppenderRef ref="file" />
      </Root>
   </Loggers>

</Configuration>